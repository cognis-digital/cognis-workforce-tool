# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Cognis API Configuration
COGNIS_API_KEY=your-api-key-here
COGNIS_API_URL=https://api.cognisdigital.com/v1
COGNIS_DEFAULT_MODEL=Cognis-Zenith-4.0

# Security Settings
JWT_SECRET=change-this-to-a-secure-random-string
CORS_ORIGIN=http://localhost:5173,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info

# Database Configuration (Uncomment when implementing database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cognis_api
# DB_USER=postgres
# DB_PASSWORD=password

# Cache Configuration (Uncomment when implementing cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# CACHE_TTL=3600
