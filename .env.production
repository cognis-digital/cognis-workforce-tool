# Cognis Evolution Architecture - Production Environment

# API Configuration
API_URL=https://api.cognisdigital.com
API_VERSION=v1
API_TIMEOUT=30000

# Evolution Architecture Settings
EVOLUTION_HISTORY_LIMIT=50
EVOLUTION_AUTO_SNAPSHOT=true
POLYMORPHIC_GENERATION_ENABLED=true

# Cognis AI Model Configuration
COGNIS_MODEL_ENDPOINT=https://models.cognisdigital.com
COGNIS_ZENITH_VERSION=4.0
COGNIS_APEX_VERSION=3.5
COGNIS_VERTEX_VERSION=4.0
COGNIS_MODEL_TIMEOUT=45000

# Authentication
AUTH_DOMAIN=auth.cognisdigital.com
AUTH_CLIENT_ID=production-client-id
AUTH_AUDIENCE=production-audience

# Blockchain Integration
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_PROVIDER_URL=https://mainnet.infura.io/v3/9aa3d95b3bc440fa88ea12eaa4456161
SMART_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
CHAIN_ID=1
BLOCKCHAIN_TIMEOUT=15000

# Feature Flags
FEATURE_TEMPORAL_SNAPSHOTS=true
FEATURE_MULTI_AGENT=true
FEATURE_BLOCKCHAIN_VERIFICATION=true

# Client-side exposed variables (prefixed with VITE_)
VITE_APP_NAME=Cognis Digital
VITE_API_URL=https://api.cognisdigital.com
VITE_APP_VERSION=${VERSION}
