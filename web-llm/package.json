{
  "name": "cognis-local-llm",
  "version": "1.0.0",
  "description": "Local LLM agent system using WASM/WebGPU",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/server/index.js",
    "dev:server": "nodemon --watch server --exec \"ts-node --esm server/index.ts\"",
    "dev:web": "vite web-llm",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "build:server": "tsc -p tsconfig.server.json",
    "build:web": "vite build web-llm",
    "build": "npm run build:server && npm run build:web",
    "test": "vitest run"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@xenova/transformers": "^2.8.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "undici": "^5.28.2",
    "ws": "^8.14.2",
    "zod": "^3.22.4",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/ws": "^8.5.8",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
